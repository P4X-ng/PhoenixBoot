# PhoenixGuard Security Suite Makefile
# Simple build system for demonstration purposes

CC = gcc
CFLAGS = -Wall -Wextra -std=c99 -DPHOENIXGUARD_DEMO -I.

# Source files
SOURCES = \
	PhoenixGuardMain.c \
	BootkitSentinel.c \
	BootstrapGuardian.c \
	IntegrityValidator.c \
	ImmutableRecovery.c \
	BootChainHoneypot.c \
	OsIntegrityValidator.c \
	SentinelAnalysis.c \
	ParanoiaMode.c

# Object files
OBJECTS = $(SOURCES:.c=.o)

# Target executable
TARGET = phoenixguard_demo

# Build rules
all: $(TARGET)

$(TARGET): $(OBJECTS)
	@echo "ðŸ”— Linking PhoenixGuard Demo..."
	@$(CC) $(OBJECTS) -o $(TARGET)
	@echo "âœ… Build complete: $(TARGET)"

%.o: %.c
	@echo "ðŸ”¨ Compiling $<..."
	@$(CC) $(CFLAGS) -c $< -o $@

clean:
	@echo "ðŸ§¹ Cleaning build artifacts..."
	@rm -f $(OBJECTS) $(TARGET)
	@echo "âœ… Clean complete"

demo: $(TARGET)
	@echo "ðŸš€ Running PhoenixGuard demo..."
	@./$(TARGET)

install: $(TARGET)
	@echo "ðŸ“¦ Installing PhoenixGuard..."
	@cp $(TARGET) /usr/local/bin/
	@echo "âœ… Installed to /usr/local/bin/$(TARGET)"

.PHONY: all clean demo install

# Help target
help:
	@echo "PhoenixGuard Security Suite Build System"
	@echo ""
	@echo "Targets:"
	@echo "  all     - Build PhoenixGuard demo"
	@echo "  clean   - Remove build artifacts"
	@echo "  demo    - Build and run demonstration"
	@echo "  install - Install to system"
	@echo "  help    - Show this help"
